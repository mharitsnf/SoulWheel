func check_condition(processed_arrows):
	var result = {
		\"fc\": _first_condition(processed_arrows),
		\"sc\": _second_condition(processed_arrows)
	}
	return result


func _first_condition(processed_arrows):
	for arrow in processed_arrows:
		if !arrow.enemies_struck.empty():
			return true
	
	return false


func _second_condition(processed_arrows):
	for arrow in processed_arrows:
		for enemy in arrow.enemies_struck:
			if arrow.enemies_struck.count(enemy) > 1: return true
	
	return false
